{
  "manifest_version": 3,
  "name": "CL Overlay",
  "version": "1.0.0",
  "action": { "default_title": "CL Overlay" },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://overlay-six-orpin.vercel.app/*",
    "https://api.football-data.org/*",
    "https://areena.yle.fi/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://areena.yle.fi/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}